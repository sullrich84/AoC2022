# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length=160

[*.js]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
